<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_100"
    android:orientation="vertical"
    tools:context=".view.EditTodoFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_todo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Todo Title"
                android:paddingVertical="16dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_todo_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Todo description..."
                android:paddingVertical="16dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sm_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed: "
                app:colorOnSurface="@color/red_600" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/light_blue_500"
                android:text="Save changes" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/red_700"
                android:text="Delete todo" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>